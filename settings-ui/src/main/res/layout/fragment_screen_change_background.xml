<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blaze_mines_black_2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_button_back_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/indent_button_back_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_buttons_back_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/indent_buttons_back_and_settings_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/indent_button_settings_end" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/indent_center" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cell_bomb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@drawable/icon_background_1"
        app:layout_constraintEnd_toEndOf="@id/gl_center"
        app:layout_constraintStart_toStartOf="@id/gl_button_back_start"
        app:layout_constraintTop_toBottomOf="@id/tv_change_the_background" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_cell_bomb_1"
        app:layout_constraintEnd_toEndOf="@id/iv_cell_bomb_1"
        tools:src="@drawable/icon_checkbox" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cell_bomb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon_background_3"
        app:layout_constraintEnd_toEndOf="@id/gl_center"
        app:layout_constraintStart_toStartOf="@id/gl_button_back_start"
        app:layout_constraintTop_toBottomOf="@id/iv_cell_bomb_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_cell_bomb_2"
        app:layout_constraintEnd_toEndOf="@id/iv_cell_bomb_2"
        tools:src="@drawable/icon_checkbox" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cell_fire_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_background_2"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_center"
        app:layout_constraintTop_toTopOf="@id/iv_cell_bomb_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_cell_fire_1"
        app:layout_constraintEnd_toEndOf="@id/iv_cell_fire_1"
        tools:src="@drawable/icon_checkbox" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cell_fire_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon_background_4"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_center"
        app:layout_constraintTop_toBottomOf="@id/iv_cell_fire_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_cell_fire_2"
        app:layout_constraintEnd_toEndOf="@id/iv_cell_fire_2"
        tools:src="@drawable/icon_checkbox" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="@id/gl_button_back_start"
        app:layout_constraintTop_toTopOf="@id/gl_buttons_back_top" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_change_the_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_header_change_background"
        android:gravity="center"
        android:text="@string/change_the_background"
        android:textColor="@color/blaze_mines_white"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>